<div class="nested-fields">
  <div class="row">
    <div class="col-md-11">
      Question:<%= f.text_field :title, class: 'form-control ', :required => true %>
    </div>
    <div class="f-delete">
      <div class="s-detete">
        <%= link_to_remove_association '<i class="fas fa-eraser fa-2x"></i>'.html_safe, f %>
      </div>
    </div>
  </div>
  <div id="questions">
    <%= f.fields_for :answers do |a|%>
    <%=render 'answer_fields', f: a %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "Add answer", f, :answers, class: "btn btn-primary" %>
    </div>
  </div>
</div>
